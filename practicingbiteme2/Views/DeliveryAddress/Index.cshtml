@model IEnumerable<practicingbiteme2.Models.DeliveryAddress>

@foreach (var item in Model)
{
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>Receiver Name</dt>
            <dd>@Html.DisplayFor(i => item.ReceiverName)</dd>

            <dt>@Html.DisplayNameFor(model => model.City)</dt>
            <dd>@Html.DisplayFor(i => item.City)</dd>

            <dt>@Html.DisplayNameFor(model => model.Street)</dt>
            <dd>@Html.DisplayFor(i => item.Street)</dd>

            <dt>@Html.DisplayNameFor(model => model.Number)</dt>
            <dd>@Html.DisplayFor(i => item.Number)</dd>

            <dt>Post Code</dt>
            <dd>@Html.DisplayFor(i => item.PostCode)</dd>
        </dl>
        @Html.ActionLink("Edit", "Edit", "DeliveryAddress", new { id = item.DeliveryAddressID }, null)
        @if (item != Model.First())
        {
            @:| @Html.ActionLink("Delete", "DeleteAddress", "DeliveryAddress", new { id = item.DeliveryAddressID }, null)
        }
    </div>
}


<div>
    @Html.ActionLink("Add new Address", "AddAddress", "DeliveryAddress")
</div>
